{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true, // Generate .d.ts files
    "declarationDir": "dist/types", // Optionally, output declarations separately
    "outDir": "dist", // Output directory for compiled JS
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src"]
}
